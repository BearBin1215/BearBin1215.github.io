{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "eslint.config.js",
    "rspack.config.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
